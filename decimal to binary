import java.util.*;
public class Main
{
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int a=sc.nextInt();
		int arr[]=new int[50];
		int k=0;
		while(a>0)
		{
		    arr[k++]=a%2;
		    a=a/2;
		}
		for(int i=k-1;i>=0;i--)
		{
		    System.out.print(arr[i]);
		}
	}
}
